  function postFiles() {
    let formData = new FormData();
    // console.log($("#input-b9")[0].files);
    for (let i = 0,len = $("#input-b9")[0].files.length ; i < len; i++) {
      formData.append('file',$("#input-b9")[0].files[i]);
    };
    $.ajax({
      url: '/files/upload',
      type: 'post',
      data: formData,
      contentType: false,
      processData: false,
      success:function (res) {
        console.log(res);
        if (res.res === '0'){
          $("#upload").modal('hide');
        }
      }
    })
  }
  $.ajax({
    url:'/files'
  })
</script>
